{{ define "widget/url_container" }}
<div class="flex justify-center mx-0 my-0">
  <div class="flex flex-col w-full sm:w-11/12 md:w-10/12 lg:w-6/12 bg-white rounded-lg shadow-sm">
    <!-- Top Border -->
    <div class="border-t-2 border-gray-200">
    </div>
    <!-- Select All Row -->
    <div class="flex flex-col sm:flex-row items-start sm:items-center px-2 py-2 gap-0 sm:gap-0">
      <div class="flex items-center gap-2">
        <input type="checkbox"
               id="select_all"
               class="h-4 w-4 accent-indigo-600 hover:accent-indigo-600" />
        <label for="select_all" class="text-gray-700 font-medium select-none">
          Select all
        </label>
      </div>
      <div class="flex ml-auto border-gray-200">
      </div>
    </div>
    <!-- Divider -->
    <div class="border-t border-gray-200">
    </div>
    <!-- URLs List -->
    <div class="bg-gray-50 flex flex-col items-start w-full space-y-1 p-0">
      {{ range .Pagination.Items }}
      {{ template "widget/url_row" . }}
      {{ end }}
    </div>
  </div>
</div>
{{ end }}
