{{ define "widget/url_container" }}
<div class="flex h-auto justify-center mx-1">
  <div class="flex flex-col md:w-12/12 sm:w-12/12  lg:w-6/12 bg-white">
    <div class="border-t-2 border-gray-200">
    </div>
    <div class="flex flex-row px-2 py-2">
      <div class="flex items-center justify-center">
        <input type="checkbox"
               id="select_all"
               class="h-4 w-4 mr-1 accent-indigo-600 hover:accent-indigo-600" />
        <label for="select_all" class="text-gray-700 text-md select-none">
          Select all
        </label>
      </div>
      <div class="flex ml-auto border-gray-200">
      </div>
    </div>
    <div class="border-t-0 border-gray-200">
    </div>
    <!-- component url_row -->
    <div class="bg-gray-200 h-fit flex flex-col items-start w-full">
      {{ range .Urls }}
      {{ template "widget/url_row" . }}
      {{ end }}
    </div>
  </div>
</div>
{{ end }}
