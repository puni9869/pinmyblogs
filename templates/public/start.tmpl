{{template "layout/base" .}}
<body class="bg-[#2167DE] min-h-screen flex flex-col px-6 py-7 lg:px-8">
  <!-- Logo -->
  <header class="flex justify-center">
    {{template "widget/icon" .}}
  </header>
  <!-- Main -->
  <main class="flex-1 flex items-center justify-center px-3 sm:px-6">
    <section class="w-full max-w-sm sm:max-w-md md:max-w-lg">
      <!-- SEO H1 -->
      <h1 class="sr-only">
        PinMyBlogs – Save and Organize Your Favorite Blogs
      </h1>
      <article
        class=" group
                               border border-white/20
                               rounded-2xl
                               p-6 sm:p-8 md:p-8
                               text-white text-center
                               hover:border-white "
        >
        <!-- Header -->
       <header class="flex flex-col items-center mb-6">
         <h2 class="text-2xl sm:text-3xl md:text-4xl font-serif font-bold underline underline-offset-4 mb-3">
           PinMyBlogs
         </h2>
         <span
           class="
             inline-flex w-fit
             items-center justify-center
             px-3 py-1
             text-xs sm:text-sm
             rounded-full
             bg-white
             text-blue-600
             font-semibold
             whitespace-nowrap
           "
         >
           join waitlist
         </span>
       </header>
        <!-- Copy -->
        <p class="text-base sm:text-lg md:text-xl leading-relaxed text-white/90 font-serif mb-8">
          Save and organize your favorite blogs in one place.
          No clutter. No algorithms.
          Just the content you care about.
        </p>
        <!-- Form -->
        <form class="flex flex-col sm:flex-row gap-3 justify-center" aria-label="Join waitlist">
          <input
            type="email"
            required
            placeholder="you@example.com"
            class="
            w-full px-4 py-3
            rounded-lg text-white-900
            focus:outline-none ring-2 ring-white/70
            "
            />
          <button
            type="submit"
            class="
            px-6 py-3
            rounded-lg
            bg-white text-blue-600
            font-semibold
            hover:bg-blue-50
            transition
            "
            >
          Join
          </button>
        </form>
      </article>
    </section>
  </main>
  <!-- Footer -->
  <footer class="text-center text-white/70 text-xs sm:text-sm py-8 sm:py-10 px-4">
    © 2017-2025 pinmyblogs.com | Built with focus, not feeds.
  </footer>
</body>
