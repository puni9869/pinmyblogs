{{ template "layout/base" . }}
<div class="flex min-h-screen flex-row bg-gray-100 text-gray-800">
  <aside class="fixed top-0 left-0 h-screen w-40 bg-white p-1"
         id="side-navbar">
    {{ template "widget/nav" . }}
  </aside>
  <main class="flex flex-col flex-1 ml-40 duration-150 ease-out"
        id="top-nav-bar">
    <div class=" flex flex-row items-center justify-between gap-2 py-2 px-2 sm:px-4 bg-white border-l-2 border-r-2 border-gray-200 ">
      {{ template "widget/nav_bar_opener" . }}
      <div class="flex flex-row items-center justify-end gap-2">
        {{ template "widget/add_link" . }}
        {{ template "widget/avatar" . }}
      </div>
    </div>
    {{if .Pagination.TotalItems}}
    {{ template "widget/url_container" . }}
    {{template "widget/pagination" .}}
  {{ else }}
    {{ template "widget/no_data" . }}
    {{ end }}
  </main>
</div>
{{ template "footer" . }}
