{{ template "layout/base" . }}
<div class="flex flex-row min-h-screen bg-gray-100 text-gray-800">
  <!-- Sidebar -->
  <aside class="fixed top-0 left-0 h-screen w-40 bg-white p-1"
         id="side-navbar">
    {{ template "widget/side_nav" . }}
  </aside>
  <!-- Main Content -->
  <main class="flex flex-col flex-1 ml-40" id="top-nav-bar">
    <!-- Sticky Top Bar -->
    <div class="sticky top-0 z-50 bg-white border-b border-gray-200 shadow-sm">
      <div class="mx-auto flex items-center justify-between px-3 sm:px-4 py-2">
        {{ template "widget/nav_bar_opener" . }}
        <div class="flex flex-1">
            {{ template "widget/search" . }}
        </div>
        <div class="flex items-center gap-2">
          {{ template "widget/add_link" . }}
          {{ template "widget/avatar" . }}
        </div>
      </div>
    </div>
    <!-- Content Rail -->
    <div class="mx-auto w-full px-3">
      {{ if .Pagination.TotalItems }}
      {{ template "widget/url_container" . }}
      {{ template "widget/pagination" . }}
    {{ else }}
      {{ template "widget/no_data" . }}
      {{ end }}
    </div>
  </main>
</div>
{{ template "footer" . }}
