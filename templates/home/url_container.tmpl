    </div>
    <div class="border-t-2 border-gray-200"></div>
    <!-- component url_row -->
    <div class="bg-gray-200 h-fit flex flex-col items-center justify-start">
      {{template "home/url_row" .}}
      {{template "home/url_row" .}}
      {{template "home/url_row" .}}
      {{template "home/url_row" .}}
      {{template "home/url_row" .}}
