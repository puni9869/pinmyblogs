{{ template "layout/base" . }}

<div class="bg-gradient-to-br from-beige-50 to-white min-h-screen flex items-center justify-center px-6 py-12 lg:px-8">
  <div class="w-full max-w-md bg-white rounded-3xl shadow-xl p-8 sm:p-10">

    <!-- Logo / Brand -->
    <div class="flex flex-col items-center">
      <div class="flex justify-center flex-col items-center h-20 w-auto">
        {{ template "widget/pinmyblogs_name" . }}
      </div>

      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">
        Set your password
      </h2>

      <p class="mt-2 text-center text-sm text-gray-500">
        Create a secure password to continue
      </p>
    </div>

    <!-- Error Message -->
    <p class="mt-4 text-center text-red-600 text-sm {{ if .HasError }}visible{{ else }}hidden{{ end }}">
      {{ .Error }}
    </p>

    <!-- Set Password Form -->
    <form class="mt-6 space-y-6" action="/set-password" method="POST">

      <!-- Hidden token (from email link) -->
      <input type="hidden" name="hash" value="{{ .hash }}"/>

      <!-- New Password -->
      <div>
        <label for="password" class="block text-sm font-medium text-gray-900">
          New password
        </label>
        <div class="mt-2">
          <input
            id="password"
            name="password"
            type="password"
            required
            autofocus
            autocomplete="new-password"
            placeholder="••••••••"
            class="block w-full rounded-xl border-0 py-2 px-4 text-gray-900 shadow-md ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm"
          />
        </div>
      </div>

      <!-- Confirm Password -->
      <div>
        <label for="confirm_password" class="block text-sm font-medium text-gray-900">
          Confirm password
        </label>
        <div class="mt-2">
          <input
            id="confirm_password"
            name="confirm_password"
            type="password"
            required
            autocomplete="new-password"
            placeholder="••••••••"
            class="block w-full rounded-xl border-0 py-2 px-4 text-gray-900 shadow-md ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm"
          />
        </div>
      </div>

      <!-- Submit Button -->
      <div>
        <button
          type="submit"
          class="flex w-full justify-center rounded-xl bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-lg hover:bg-indigo-500 transition-all duration-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
        >
          Set password
        </button>
      </div>
    </form>

    <!-- Login Link -->
    <p class="mt-8 text-center text-sm text-gray-500">
      Already have an account?
      <a href="/login" class="font-semibold text-indigo-600 hover:text-indigo-500 underline">
        Log in
      </a>
    </p>
  </div>
</div>

{{ template "footer" . }}
